{
	"files": {
		"ignore": [
			".github",
			".husky",
			".vscode",
			"ci",
			"coverage",
			"docs",
			"node_modules",
			"build",
			"scripts",
			"typedocs",
			"index.js"
		]
	},
	"formatter": {
		"lineWidth": 100
	},
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"rules": {
			"complexity": {
				"useSimplifiedLogicExpression": "error"
			},
			"correctness": {
				"noUndeclaredVariables": "error",
				"noUnusedVariables": "error"
			},
			"style": {
				"useShorthandArrayType": "error",
				"noRestrictedGlobals": "error"
			},
			"nursery": {
				"useExhaustiveDependencies": "error",
				"noConsoleLog": "off",
				"noBannedTypes": "error",
				"noAccumulatingSpread": "error"
			}
		}
	}
}
